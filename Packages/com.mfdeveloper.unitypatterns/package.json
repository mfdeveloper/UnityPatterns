{
	"name": "com.mfdeveloper.unitypatterns",
	"displayName": "Unity Design Patterns",
	"version": "0.2.2",
	"unity": "2017.4",
	"description": "Unity Design Patterns based in the book: Hands-On Game Development Patterns with Unity 2019",
    "documentationUrl": "",
	"dependencies": {
		"com.unity.addressables": "1.21.19",
		"com.unity.test-framework": "1.3.9",
		"com.unity.testtools.codecoverage": "1.2.4"
	},
	"devDependencies": {
		"cross-var": "^1.1.0",
		"dotenv-cli": "^7.3.0"
	},
	"scripts": {
		"package:rename-dirs": "dotenv cross-var \"bash $REPOSITORY_ROOT/.github/scripts/functions.sh renameInvalidDirs .\"",
		"package:copy-files": "dotenv cross-var \"bash $REPOSITORY_ROOT/.github/scripts/functions.sh copyFilesForPublish .\"",
		"package:prepare": "dotenv cross-var \"bash $REPOSITORY_ROOT/.github/scripts/functions.sh localBeforePublish $REPOSITORY_ROOT\"",
		"package:pack": "npm run package:prepare && npm pack",
		"package:publish-from-local": "dotenv -v PUBLISH_FORCE=1 npm run package:prepare && npm publish",
		"publish:from-local": "npm run package:publish-from-local"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mfdeveloper/UnityPatterns.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/@mfdeveloper"
	},
    "author": {
        "name": "Felipe Ferreira",
        "url": "https://github.com/mfdeveloper"
    },
	"samples": [
		{
			"displayName": "ScriptTemplates",
			"description": "Import and move these templates to your Assets/ScriptTemplates folder",
			"path": "Samples~/ScriptTemplates"
		},
		{
			"displayName": "SingletonPersistent",
			"description": "A sample scene with persistent Singleton amon ",
			"path": "Samples~/SingletonPersistent"
		}
	]
}
